<!DOCTYPE html>
<html lang="en">
  <head>
    <title>IntroProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

 	<header>
 		<ul>
 			<li><%=link_to "Spells", root_path%></li>
 			<li><%=link_to "Adventurer Classes", adventurer_classes_path%></li>
 			<li><%=link_to "Schools of Magic", schools_path%></li>
      <li><%=link_to "About", about_path%></li>
 		</ul>
    <%= form_tag(results_search_index_path, method: "get") do %>
      <%= label_tag(:q, "Search for:") %>
      <%= text_field_tag(:q) %>
      <%= submit_tag("Search") %>
    <% end %>
 	</header>
    <%= yield %>
  </body>
</html>
